{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2016",
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,  
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@entity/*": ["./app/entity/*"],
      "@server/*": ["./app/server/*"],
      "@plugins/*": ["./app/plugins/*"]
    }  
  },
  "exclude": [
    ".eslintrc.js"
  ]
}
