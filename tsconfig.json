{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2016",
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,  
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["./types"],
    "paths": {
      "@controllers/*": ["./app/controllers/*"],
      "@entity/*": ["./app/entity/*"],
      "@helpers/*": ["./app/helpers/*"],
      "@plugins/*": ["./app/plugins/*"],
      "@routes/*": ["./app/routes/*"]
    }  
  },
  "exclude": [
    ".eslintrc.js"
  ]
}
